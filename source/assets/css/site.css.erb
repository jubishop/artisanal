/* CORE */
html {
  height: 100%;
}
body {
  --main-bg-color: snow;
  --main-border-color: lightgrey;
  --main-text-color: #202020;
}
@media (prefers-color-scheme: dark) {
  body {
    --main-bg-color: #202020;
    --main-border-color: dimgrey;
    --main-text-color: snow;
  }
  a {
    color: snow;
  }
  a:visited {
    color: pink;
  }
}
body {
  --sidebar-hidden: revert;
  --sidebar-showing: none;

  background-color: var(--main-bg-color);
  color: var(--main-text-color);
  display: grid;
  grid-template-columns: auto 1fr;
  grid-template-rows: auto 1fr;
  height: 100%;
  margin-left: 1em;
  overflow: hidden;
  padding: 0;
}

/* SIDEBAR BUTTONS */
#show-sidebar-button,
#hide-sidebar-button {
  cursor: pointer;
  font-size: 2em;
}
@media (pointer: coarse) {
  #show-sidebar-button,
  #hide-sidebar-button {
    font-size: 2.5em;
  }
}
#show-sidebar-button {
  display: var(--sidebar-hidden);
}
#hide-sidebar-button {
  display: var(--sidebar-showing);
  float: right;
}

/* UPPER LEFT */
.upper-left {
  align-self: center;
  min-width: 2.5em;
  text-align: center;
}
.artisanal-letter {
  display: var(--sidebar-showing);
  font-family: 'Mansalva', cursive;
  font-size: 4em;
  line-height: 1em;
  text-decoration: none;
}

/* HEADLINE */
.headline {
  border-bottom: 1px solid var(--main-border-color);
  margin-left: 1em;
  padding: 0.5em 0;
  text-align: center;
}
.headline h1 {
  font-size: 3em;
  margin: 0;
  padding: 0;
}

/* SIDEBAR */
.sidebar-links {
  display: var(--sidebar-showing);
}
.sidebar-links * {
  display: block;
}
.profile-pic {
  margin: auto;
  width: 10em;
}
.home-link,
.about-link {
  text-align: center;
}
.sidebar ul {
  list-style: none;
  margin: 0;
  padding: 0;
  text-align: center;
}
.sidebar-header {
  display: var(--sidebar-hidden);
  font-family: 'Patrick Hand', cursive;
  font-size: 4em;
  left: 1rem;
  letter-spacing: 0.2em;
  margin: 0;
  padding: 0;
  position: absolute;
  text-decoration: none;
  top: 10rem;
  transform: rotate(90deg);
  transform-origin: 1em 0;
}

/* MAIN */
.main {
  border-left: 1px solid var(--main-border-color);
  margin-left: 1em;
  overflow: hidden;
  overflow-y: scroll;
  padding: 1em;
}
.main p:first-child {
  margin-top: 0;
}

/* MEDIUM SCREENS */
@media only screen and (min-width: 1024px) {
  body {
    --sidebar-showing: revert;
    --sidebar-hidden: none;
  }
}

/* WIDE SCREENS */
@media only screen and (min-width: 1200px) {
  <% if app.production? %>
    #hide-sidebar-button {
      display: none;
    }
  <% end %>
}
