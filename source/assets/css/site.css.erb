/* CORE */
body, html {
  height: 100%;
}
body {
  --sidebar-hidden: revert;
  --sidebar-showing: none;

  display: grid;
  grid-template-columns: auto 1fr;
  grid-template-rows: auto 1fr;
  margin-left: 1em;
  overflow: hidden;
  padding: 0;
}

/* SIDEBAR BUTTONS */
#show-sidebar-button,
#hide-sidebar-button {
  cursor: pointer;
  font-size: 2em;
}
#show-sidebar-button {
  display: var(--sidebar-hidden);
}
#hide-sidebar-button {
  display: var(--sidebar-showing);
  float: right;
}

/* UPPER LEFT */
.upper-left {
  height: 4em;
  margin: 1em 0.5em;
  text-align: center;
}
.artisanal-letter {
  display: var(--sidebar-showing);
  font-family: 'Parisienne', cursive;
  font-size: 4em;
  text-decoration: none;
}

/* HEADLINE */
.headline {
  border-bottom: 1px solid black;
  padding: 1em 0;
  text-align: center;
  margin-left: 1em;
}
.headline h1 {
  font-size: 3em;
  margin: 0;
  padding: 0;
}

/* SIDEBAR */
.sidebar-links {
  display: var(--sidebar-showing);
}
.sidebar-links * {
  display: block;
}
.profile-pic {
  margin: auto;
  width: 10em;
}
.home-link,
.about-link {
  text-align: center;
}
.sidebar ul {
  list-style: none;
  margin: 0;
  padding: 0;
  text-align: center;
}
.sidebar-header {
  display: var(--sidebar-hidden);
  font-family: 'Patrick Hand', cursive;
  font-size: 4em;
  left: 1rem;
  letter-spacing: 0.2em;
  margin: 0;
  padding: 0;
  position: absolute;
  text-decoration: none;
  top: 10rem;
  transform: rotate(90deg);
  transform-origin: 1em 0;
}

/* MAIN */
.main {
  margin-left: 1em;
  overflow: hidden;
  overflow-y: scroll;
  border-left: 1px solid black;
  padding: 1em;
}
.main p:first-child {
  margin-top: 0;
}

/* MEDIUM SCREENS */
@media only screen and (min-width: 1024px) {
  body {
    --sidebar-showing: revert;
    --sidebar-hidden: none;
  }
}

/* WIDE SCREENS */
@media only screen and (min-width: 1200px) {
  <% if app.production? %>
    #hide-sidebar-button {
      display: none;
    }
  <% end %>
}
