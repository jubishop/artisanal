<% wrap_layout(:layout) { %>
  <% current_page.data.title = current_article.title %>

  <% content_for(:assets) { %>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code&display=swap"
          rel="stylesheet">
    <%= stylesheet_link_tag "article" %>
    <%= javascript_include_tag "article" %>
  <% } %>

  <%= yield %>

  <p class="comment">
    What do you think? I'd love to hear from you. <%= link_to "Here is a link", "https://github.com/jubishop/artisanal/blob/master/source#{current_page.url}.html.md.erb" %> to the source for this article on github.  Please <%= link_to "open an issue", "https://github.com/jubishop/artisanal/issues" %>, send me a <%= link_to "pull-request", "https://github.com/jubishop/artisanal/pulls" %>, or just email me at <%= link_to "jubi@jubishop.com", "mailto:jubi@jubishop.com" %>.
  </p>
<% } %>
